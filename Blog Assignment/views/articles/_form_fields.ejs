<!--
    an ejs file that contains the headings and form field paramaters
-->
<div class="form-group text-light mt-4">
    <label for="title">Title</label>
<!--
    use a value in each field and set it so that if there is an error,
    the newly rendered form will parse information from the previous page
-->
    <input required value="<%= article.title %>" type="text" name="title" id="title"
    class="form-control">
</div>
<div class="form-group text-light mt-4">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>

<!--
    prevent a user submitting a form that is invalid by setting
    the text area to required
-->
<div class="form-group text-light mt-4">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>

<a href="/" class="btn btn-danger mt-4">Cancel</a>
<button type="submit" class="btn btn-success mt-4">Save</button>